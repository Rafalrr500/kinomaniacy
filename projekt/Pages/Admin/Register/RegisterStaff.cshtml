@page
@model projekt.Pages.Admin.Register.RegisterStaffModel
@{
    ViewData["Title"] = "RegisterStaff";
}

<h2>@ViewData["Title"]</h2>
<div class="text-red">@Model.errorMessage</div>

<div class="container">
    <form class="form-horizontal" method="post">
        @Html.Hidden("returnUrl", Model.returnUrl)
        <div class="form-group">
            <label asp-for="staff.jobPosition" class="control-label col-sm-2"></label>
            <div class="col-sm-6">
                <input asp-for="staff.jobPosition" class="form-control">
                <span asp-validation-for="staff.jobPosition" class="text-red"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="staff.userName" class="control-label col-sm-2"></label>
            <div class="col-sm-6">
                <input asp-for="staff.userName" class="form-control">
                <span asp-validation-for="staff.userName" class="text-red"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="staff.password" class="control-label col-sm-2"></label>
            <div class="col-sm-6">
                <input asp-for="staff.password" class="form-control">
                <span asp-validation-for="staff.password" class="text-red"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="staff.confirmPassword" class="control-label col-sm-2"></label>
            <div class="col-sm-6">
                <input asp-for="staff.confirmPassword" class="form-control">
                <span asp-validation-for="staff.confirmPassword" class="text-red"></span>
            </div>
        </div>
        <div class="form-group">
            <button class="btn btn btn-primary">Zatwierdź</button>
        </div>
    </form>
</div>
