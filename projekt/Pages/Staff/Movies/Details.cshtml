@page
@model projekt.Pages.Staff.Movies.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Movie</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Movie.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Movie.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Movie.RunningTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Movie.RunningTime)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Movie.CategoryMovies)
        </dt>
        <dd class="col-sm-10">
            @{
                string categories = "";
                categories = string.Join(", ", Model.Movie.CategoryMovies.Select(m => m.Category.Name));
                <span>@categories</span>
            }
        </dd>
        <dt class="col-sm-2">
            @if (@Model.Movie.Trailer != null)
            {
                @Html.DisplayNameFor(model => model.Movie.Trailer)
            }
        </dt>
        <dd class="col-sm-10">
            @if (@Model.Movie.Trailer != null)
            {
                <iframe width="560" height="315" src="@Model.Movie.Trailer" frameborder="0"></iframe>
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Movie.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
