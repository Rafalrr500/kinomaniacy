@page
@model projekt.Pages.Staff.MovieShowings.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>MovieShow</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MovieShow.Id" />
            <div class="form-group">
                <label asp-for="MovieShow.Format" class="control-label"></label>
                <select asp-for="MovieShow.Format">
                    <option value="oryginalny język polski">oryginalny język polski</option>
                    <option value="napisy">napisy</option>
                    <option value="lektor">lektor</option>
                    <option value="dubbing">dubbing</option>
                </select>
                <span asp-validation-for="MovieShow.Format" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MovieShow.MovieId" class="control-label"></label>
                <select asp-for="MovieShow.MovieId" class="form-control" asp-items="ViewBag.MovieId"></select>
                <span asp-validation-for="MovieShow.MovieId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
